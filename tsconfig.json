{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    
    //new
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true, //here is the important line, to import and resolve any json file; this will help VSCode to autocomplete and suggest quick-fixes
  },
  "include": ["src", "ecosystem.config.js"],
  "exclude": ["node_modules"]
}
